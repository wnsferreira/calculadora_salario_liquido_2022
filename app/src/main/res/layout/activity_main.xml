<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblSalarioBruto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:text="Salario Bruto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSalarioBruto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblSalarioBruto"
        app:layout_constraintStart_toEndOf="@+id/lblSalarioBruto"
        app:layout_constraintTop_toTopOf="@+id/lblSalarioBruto"
        app:layout_constraintVertical_bias="0.576" />

    <TextView
        android:id="@+id/lblDependentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="Quant dependentes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSalarioBruto" />

    <EditText
        android:id="@+id/txtQuantDependentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblDependentes"
        app:layout_constraintStart_toEndOf="@+id/lblDependentes"
        app:layout_constraintTop_toTopOf="@+id/lblDependentes"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/lblPensaoAlimenticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="Pensão alimentícia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDependentes" />

    <EditText
        android:id="@+id/txtPensaoAlimenticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblPensaoAlimenticia"
        app:layout_constraintStart_toEndOf="@+id/lblPensaoAlimenticia"
        app:layout_constraintTop_toTopOf="@+id/lblPensaoAlimenticia" />

    <TextView
        android:id="@+id/lblPlanoSaude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="Plano de saúde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPensaoAlimenticia" />

    <EditText
        android:id="@+id/txtPlanoSaude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblPlanoSaude"
        app:layout_constraintStart_toEndOf="@+id/lblPlanoSaude"
        app:layout_constraintTop_toTopOf="@+id/lblPlanoSaude"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/lblOutrosDescontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="Outros descontos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPlanoSaude" />

    <EditText
        android:id="@+id/txtOutrosDescontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/lblOutrosDescontos"
        app:layout_constraintStart_toEndOf="@+id/lblOutrosDescontos"
        app:layout_constraintTop_toTopOf="@+id/lblOutrosDescontos" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblOutrosDescontos" />



</androidx.constraintlayout.widget.ConstraintLayout>